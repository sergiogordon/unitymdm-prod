[deployment]
build = ["sh", "-c", "cd dashboard && npm install --legacy-peer-deps && npm run build"]
run = ["sh", "-c", "bash -c \"uvicorn server.main:app --host 0.0.0.0 --port 8000 & cd dashboard && npm run start -- -p 5000 -H 0.0.0.0\""]
deploymentTarget = "cloudrun"

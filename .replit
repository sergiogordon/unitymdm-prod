modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["replitmail:1.0.0", "javascript_object_storage:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "gh", "libiconv", "libxcrypt", "postgresql", "rustc", "zulu23", "mailutils"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- -p 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 35259
externalPort = 3003

[[ports]]
localPort = 40827
externalPort = 3002

[[ports]]
localPort = 42131
externalPort = 3000

[[ports]]
localPort = 43085
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "uvicorn", "server.main:app", "--host=0.0.0.0", "--port=5000"]

[objectStorage]
defaultBucketID = "replit-objstore-6ce51708-3cdf-4d99-953f-32f22912b665"
